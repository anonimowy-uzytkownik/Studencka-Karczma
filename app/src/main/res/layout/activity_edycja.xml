<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/guzik_test"
    >

    <TextView
        android:id="@+id/nazwa"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/skladniki"
        android:layout_centerInParent="true"
        android:background="@drawable/edittext_test"
        android:gravity="center"
        android:hint="nazwa dania"
        android:inputType="text"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/skladniki"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/sposobPrzygotowania"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_test"
        android:gravity="center"
        android:hint="skladniki"
        android:inputType="textMultiLine"
        android:textColor="#050505" />

    <EditText
        android:id="@+id/sposobPrzygotowania"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_test"
        android:gravity="center"
        android:hint="sposobPrzygotowania"
        android:inputType="textMultiLine"
        android:textColor="#050505" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="zatwierdÅº zmiany"
        android:id="@+id/buttonEdytuj"
        android:layout_below="@id/sposobPrzygotowania"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/guzik_test2"
        >

    </Button>

</RelativeLayout>