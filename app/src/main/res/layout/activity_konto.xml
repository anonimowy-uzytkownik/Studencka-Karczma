<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Konto">


    <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:text="Button"
        />

    <Button
        android:id="@+id/buttonPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:text="Button"
        android:layout_toRightOf="@id/button"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="80"
        android:text="Button"
        android:layout_toRightOf="@id/buttonPlayer"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/guzik_test2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/button"/>
    <Button
        android:id="@+id/button_ZobaczDodanePrzepisy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Button"
        android:layout_below="@id/button"
        android:layout_toRightOf="@id/imageButton"
        />

    <TextView
        android:id="@+id/textView_NazwaUżytkownika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TextView"
        android:layout_below="@id/button_ZobaczDodanePrzepisy"
        android:layout_toRightOf="@id/imageButton"
        />

    <TextView
        android:id="@+id/textView_DataDołączenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TextView"
        android:layout_below="@id/textView_NazwaUżytkownika"
        android:layout_toRightOf="@id/imageButton"/>

    <TextView
        android:id="@+id/textView_Wiek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TextView"
        android:layout_below="@id/textView_DataDołączenia"
        android:layout_toRightOf="@id/imageButton"/>

    <TextView
        android:id="@+id/textView_Imię"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/textView_Wiek"
        android:layout_toRightOf="@id/imageButton"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/imageButton"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/textView8"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center"
        android:layout_below="@id/textView9"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:layout_weight="40"
        android:gravity="center"
        android:text="Obrazek"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textView10"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Autor"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/textView1"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Ocena"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/textView1"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Data dodania"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textView3"
        android:layout_toRightOf="@id/textView1"/>

    <Button
        android:id="@+id/buttonPrzepisy"
        android:background="@drawable/guzik_test2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Przepisy"
        android:layout_alignParentBottom="true"

        />

    <Button
        android:id="@+id/buttonUlubione"
        android:background="@drawable/guzik_test2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ulubione"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonPrzepisy"/>

    <Button
        android:id="@+id/buttonKonto"
        android:background="@drawable/guzik_test2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Konto"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonUlubione"/>

    <Button
        android:id="@+id/buttonKupony"
        android:background="@drawable/guzik_test2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Kupony"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonKonto"
        />



</RelativeLayout>