<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_przepisy">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/obrazek"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:background="@drawable/imageview_border"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/nazwa"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"


                android:gravity="center_horizontal"
                android:hint="nazwa dania"
                android:inputType="text"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:text="składniki:"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/skladniki"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:background="@drawable/edittext_test"
                android:gravity="center"
                android:padding="10dp"
                android:hint="skladniki"
                android:inputType="textMultiLine"
                android:textColor="#050505" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:text="sposób przygotowania:"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/sposobPrzygotowania"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:background="@drawable/edittext_test"
                android:gravity="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:hint="sposobPrzygotowania"
                android:inputType="textMultiLine"
                android:textColor="#050505" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="45dp"
                android:text="autor:"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/autor"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/guzik_test"
                android:gravity="center"
                android:hint="autor"
                android:inputType="text"
                android:textColor="#FF9800"
                android:textColorHint="#FF9800"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>