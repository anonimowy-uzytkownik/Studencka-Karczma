<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gotowe"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/haslo"
        android:layout_centerInParent="true"

        android:background="@drawable/edittext_test"
        android:gravity="center"
        android:hint="e-mail"
        android:inputType="text"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/haslo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_test"
        android:gravity="center"
        android:hint="haslo"
        android:inputType="text"
        android:textColor="#050505" />


    <Button
        android:id="@+id/logowanie"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/haslo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/guzik_test"
        android:gravity="center"
        android:text="zaloguj sie!"
        android:textColor="#A6F1CC68"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logowanie_gosc"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/logowanie"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/guzik_test"
        android:gravity="center"
        android:text="wejdz jako gość"
        android:textColor="#A6F1CC68"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rejestracja"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/logowanie_gosc"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Nie masz jeszcze konta? Zarejestruj się!"
        android:textColor="#A6F1CC68"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar_logowanie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rejestracja"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="invisible" />


</RelativeLayout>